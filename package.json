{
  "name": "schedulink-root",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "postinstall": "npm --prefix testapp install --no-audit --no-fund",
    "verify:frontend-build": "node scripts/verify-frontend-build.js",
    "build": "npm --prefix testapp run build",
    "verify:env": "node scripts/verify-env.js",
    "prestart": "npm run verify:env && npm run verify:frontend-build",
    "start": "node backend/server.js",
    "render:list": "node scripts/render/list-services.js",
    "render:deploy:api": "node scripts/render/deploy.js --name schedulink-api",
    "render:deploy:app": "node scripts/render/deploy.js --name schedulink-app",
    "render:deploy": "node scripts/render/deploy.js --all",
    "render:env:api": "node scripts/render/set-env-from-file.js --service schedulink-api --file .env.render.api",
    "render:env:app": "node scripts/render/set-env-from-file.js --service schedulink-app --file .env.render.app",
    "render:rollback:api": "node scripts/render/rollback.js --service schedulink-api --list",
    "render:rollback:app": "node scripts/render/rollback.js --service schedulink-app --list"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "axios": "^1.7.7",
    "cookie-parser": "^1.4.6",
    "crypto-js": "^4.2.0",
    "express": "^4.19.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.7",
    "zod": "^3.25.76"
  }
}
